            int d;
            Console.WriteLine("enterr the day number");
             d = Convert.ToInt32(Console.ReadLine());

            string fr = result(d);

            Console.WriteLine(fr);

            static string result( int  day)
            {
                string str;
                switch (day)
                {
                    case 1:
                        str = "saturday";
                        break;
                    case 2:
                        str = "sunday";
                        break;
                    case 3:
                        str = "monday";
                        break;
                    default:
                        str = "input is wrong";
                        break;

                }
                return str;
            }
